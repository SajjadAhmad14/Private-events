<% unless current_user.attended_events.include?(event) %>
  <%= form_with(model: @event_attendence, url: attendees_path, local: true) do |form| %>
    <div class="forms mb-4">
      <%= form.hidden_field :event_id, class: 'form-control', value: event.id %>
      <div class="actions">
        <%= form.submit 'Attend event', class: 'btn btn-primary btn-block mt-2' %>
      </div>
    </div>
  <% end %>
<% end %>
