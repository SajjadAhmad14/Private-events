<div class = 'row text-center'>
  <div class="card bg-info col-12" style="width: 18rem;">
    <div class = 'col-4'>
      <h1>Created Events</h1>
      <div class="card-body">
        <%@user.created_events.each do |event|%>
          <h3 class="card-subtitle mb-2"><%= event.name %></h3>
        <% end %>
      </div>
    </div>
    <div class = 'col-4'>
      <h1>Past Attended Events</h1>
        <div class="card-body">
          <%@user.attended_events.each do |event|%>
            <h3 class="card-subtitle mb-2"><%= event.name %></h3>
          <% end %>
        </div>
      <% end %>
    </div>
    <div class = 'col-4'>
      <h1>Upcoming Events</h1>
      <div class="card-body">
        <%@user.created_events.each do |event|%>
          <h3 class="card-subtitle mb-2"><%= event.name %></h3>
        <% end %>
      </div>
    </div>
  </div>
</div>
